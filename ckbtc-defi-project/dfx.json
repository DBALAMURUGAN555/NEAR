{
  "version": 1,
  "dfx": "0.18.0",
  "canisters": {
    "defi": {
      "type": "motoko",
      "main": "src/DeFi.mo",
      "dependencies": ["icrc_ledger"]
    },
    "proof_of_reserves": {
      "type": "motoko",
      "main": "src/ProofOfReserves.mo"
    },
    "icrc_ledger": {
      "type": "custom",
      "candid": "icrc_ledger.did",
      "wasm": "https://download.dfinity.systems/ic/aaaaa-aa/canisters/ledger-canister.wasm.gz"
    },
    "minter": {
      "type": "rust",
      "package": "minter",
      "candid": "rs/minter/minter.did"
    }
  },
  "defaults": {
    "build": {
      "args": "",
      "packtool": ""
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943",
      "type": "ephemeral"
    },
    "ic": {
      "providers": ["https://ic0.app"],
      "type": "persistent"
    }
  }
}
